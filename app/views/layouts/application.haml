!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= content_for?(:title) ? yield(:title) : "foundation-rails"
    %link{:rel => "stylesheet", :href => "https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.2.1/animate.css"}
    %link{:rel => "stylesheet", :href => "//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.min.css"}
    %script{:src => "//js.pusher.com/2.2/pusher.min.js", :type => "text/javascript"}
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr"
    = javascript_include_tag "application", 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .row
      .columns.small-12
        %h1#logo io
        = yield
